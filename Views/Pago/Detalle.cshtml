@model PagoDTO

@{
    ViewBag.Title = "Detalle Pago";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">@ViewBag.Title</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("administrador"))
    {
        <button type="button" class="btn btn-danger btn-sm" onclick="Sweet('/Pago/Eliminar?id=', @Model.Id_pago)">
            Eliminar
        </button>
    }


    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover bg-white text-dark rounded">
            <thead class="table-dark rounded-top">
                <tr>
                    <th>Identificador</th>
                    <th>Contrato</th>
                    <th>Monto</th>
                    <th>Fecha</th>
                    <th>Observacion</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id_pago</td>
                    <td>
                        <a
                            href="@Url.Action("Detalle", "Contrato", new { id = Model.Id_contrato })">@Model.ToString();</a>
                    </td>
                    <td>@Model.Monto</td>
                    <td>@Model.Fecha</td>
                    <td>@Model.Observacion</td>
                    <td>@Model.Estado</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
