@model StiegerInmobiliaria.Models.InquilinoModel

@{
    ViewBag.Title = "Detalle Inquilino";
}
<h2>@ViewBag.Title</h2>
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-danger">
        @TempData["Mensaje"]
    </div>
}

@if (User.IsInRole("administrador"))
{
    <button type="button" class="btn btn-danger btn-sm" onclick="Sweet('/Inquilino/Eliminar?id=', @Model.Id_inquilino)">
        Eliminar
    </button>
}

<a href="@Url.Action("NuevoEditar", "Inquilino", new { id = Model.Id_inquilino })">
    <button class="btn btn-warning btn-sm rounded">Editar</button>
</a>

<table class="table table-bordered table-striped table-hover bg-white text-dark rounded mt-3">
    <thead class="table-dark rounded-top">
        <tr>
            <th>Identificador</th>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Tel√©fono</th>
            <th>Mail</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id_inquilino</td>
            <td>@Model.Dni</td>
            <td>@Model.Nombre</td>
            <td>@Model.Apellido</td>
            <td>@Model.Telefono</td>
            <td>@Model.Mail</td>
        </tr>
    </tbody>
</table>