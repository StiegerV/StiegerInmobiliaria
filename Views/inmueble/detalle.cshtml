@model InmuebleModel

@{
    ViewBag.Title = "Detalle Inmueble";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">@ViewBag.Title</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-center gap-2 mb-3">
        <form action="@Url.Action("Eliminar", "Inmueble")" method="post" onsubmit="return confirm('¿Eliminar al inmueble?');">
            <input type="hidden" name="id" value="@Model.Id_inmueble" />
            <button type="submit" class="btn btn-danger btn-sm rounded shadow-sm">Eliminar</button>
        </form>

        <a href="@Url.Action("NuevoEditar", "Inmueble", new { id = Model.Id_inmueble })" class="btn btn-warning btn-sm rounded shadow-sm">
            Editar
        </a>
    </div>

    <div class="text-center mb-4">
        <img src="@Model.Imagen" alt="Imagen del inmueble" class="img-fluid rounded shadow-sm border border-2"
             style="max-height: 300px;" />
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover bg-white text-dark rounded">
            <thead class="table-dark rounded-top">
                <tr>
                    <th>Identificador</th>
                    <th>Propietario</th>
                    <th>Dirección</th>
                    <th>Uso</th>
                    <th>Tipo</th>
                    <th>Ambientes</th>
                    <th>Coordenadas</th>
                    <th>Precio</th>
                    <th>Disponible</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id_inmueble</td>
                    <td>
                        <a href="@Url.Action("Detalle", "Propietario", new { id = ViewBag.Propietario.Id_propietario })"
                           class="text-decoration-none text-primary fw-semibold">
                            @ViewBag.Propietario.Apellido @ViewBag.Propietario.Nombre
                        </a>
                    </td>
                    <td>@Model.Direccion</td>
                    <td>@Model.Uso</td>
                    <td>@Model.Tipo</td>
                    <td>@Model.Ambientes</td>
                    <td>@Model.Cordenadas</td>
                    <td>$@Model.Precio</td>
                    <td>@Model.Disponible</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
